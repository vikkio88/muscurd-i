<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="Muscurdi.Views.SplashView">
  <DockPanel LastChildFill="True">
    <Border Height="50" BorderBrush="Black" BorderThickness="1" DockPanel.Dock="Top">
      <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" FontSize="20">Muscurd-I</TextBlock>
        <TextBlock HorizontalAlignment="Center" FontSize="16">Password Manager</TextBlock>
      </StackPanel>
    </Border>
    <StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
      <TextBox Watermark="Master Password"
               Text="{Binding Password}"
               Width="200"
               MaxWidth="200"
               FontSize="16"
               PasswordChar="*" />
      <Button Width="200"
              Margin="3"
              Command="{Binding Login}"
              VerticalContentAlignment="Center"
              HorizontalContentAlignment="Center">Login</Button>
    </StackPanel>
  </DockPanel>
</UserControl>